PATH=/sbin:$PATH
PATH=/usr/sbin:$PATH
PATH=/usr/local/sbin:$PATH
PATH=$HOME/bin:$PATH

# zsh 使用時の term 設定
export TERM=xterm

# java
export JAVA_HOME=/etc/alternatives/jre_openjdk
PATH=$JAVA_HOME/bin:$PATH

# scala
export SCALA_HOME=/usr/scala/default
PATH=$SCALA_HOME/bin:$PATH

# playframework
PATH=/usr/local/github/playframework:$PATH

# docker
# 一つ前のコンテナIDを取得するalias
alias dl='sudo docker ps -l -q'

export PATH

alias sudo='sudo env PATH=$PATH'

if [ -e "/usr/bin/vim" ]; then
    alias vim='env LANG=ja_JP.UTF-8 /usr/bin/vim "$@"'
elif [ -e "/usr/local/bin/vim" ]; then
    alias vim='env LANG=ja_JP.UTF-8 /usr/local/bin/vim "$@"'
else
    echo "vim not exists."
fi

# rbenv
if [ -d "${HOME}/.rbenv" ]; then
    echo "rbenv exists."
    export PATH=$HOME/.rbenv/bin:$PATH
    eval "$(rbenv init -)"
else
    echo "rbenv not exists."
fi

